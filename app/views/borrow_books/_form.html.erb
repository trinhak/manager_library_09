<div class="container w3layouts agileits">
  <div class="register w3layouts agileits">
    <%= form_for @borrow_book do |f| %>
      <%= render "shared/erro_messager", object: f.object %>
        <div class="form-group">
          <div class="button">
            <%= f.label :user_id %>
          </div>
          <%= f.collection_select :user_id, @user, :id, :name, class: "form-control" %>

          <div class="button">
            <%= f.label :borrow_start %>
          </div>
          <%= f.date_select :borrow_start, id: :borrow_book_borrow_start %>

          <div class="button">
            <%= f.label :borrow_end %>
          </div>
          <%= f.date_select :borrow_end, id: :borrow_book_borrow_end %>

          <div class="button">
            <%= f.label :quantity %>
          </div>
          <%= f.number_field :quantity, id: :borrow_book_quantity %>

          <div class="button">
            <%= f.label :status %>
          </div>
          <%= f.check_box :status, id: :borrow_book_status %>
        </div>
      <div class="send-button w3layouts agileits">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
