<header>
  <div class="container">
    <%= link_to t(".title_logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".tab_home"), root_path %></li>
        <li><%= link_to t(".author"), authors_path %></li>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t(".categories"), categories_path %></li>
          <% end %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".tab_sigin"), signup_path %></li>
          <li class="dropdown">
            <li><%= link_to t(".tab_login"), login_path %></li>
            <li class="divider"></li>
        </li>
        <% end %>
      </ul>
    </nav>
    <div class="form-group">
      <%= form_tag users_path, method: :get do %>
        <%= text_field_tag :search, params[:search], placeholder: t(".search") %>
      <% end %>
    </div>
  </div>
</header>
